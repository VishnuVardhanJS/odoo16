                <table class="table table-sm o_main_table mt-4">
                    <thead style="display: table-row-group; background-color: #001f5e;">
                        <tr>
                            <th style="color: white;">P.O. DATE</th>
                            <th style="color: white;">REQUISITIONER</th>
                            <th style="color: white;">SHIPPED VIA</th>
                            <th style="color: white;">F.O.B. POINT</th>
                            <th style="color: white;">TERMS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span t-field="o.date_approve" t-options='{"format": "dd-MM-yyyy"}'/>
                            </td>
                            <td>
                                <span/>
                            </td>
                            <td>Soft copy</td>
                            <td>
                                <span/>
                            </td>
                            <td>As mentioned below</td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-sm o_main_table mt-4">
                    <thead style="display: table-row-group; background-color: #001f5e;">
                        <tr>
                            <th name="th_description" style="color: white;">
                                <strong>PART DESCRIPTION</strong>
                            </th>
                            <th name="th_date_req" class="text-center" style="color: white;">
                                <strong>Term</strong>
                            </th>
                            <th name="th_quantity" class="text-end" style="color: white;">
                                <strong>QTY</strong>
                            </th>
                            <th name="th_price_unit" class="text-end" style="color: white;">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_amount" class="text-end" style="color: white;">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td id="product">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-center">
<!--                                        &lt;!&ndash;                                    duration term&ndash;&gt;-->
<!--                                        <span t-field="o.date_approve" t-options='{"format": "dd-MM-yyyy"}'/>-->
<!--                                        <span>to</span>-->
<!--                                        <span t-field="o.date_order" t-options='{"format": "dd-MM-yyyy"}'/>-->
<!--                                        &lt;!&ndash;                                    duration term&ndash;&gt;-->
                                        <span t-field="o.po_term"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm table-borderless">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div>

                <p t-field="o.notes" class="mt-4"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_purchaseorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
